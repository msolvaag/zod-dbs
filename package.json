{
  "name": "zod-pg",
  "version": "0.1.1",
  "description": "Opinionated Zod schema generator for PostgreSQL databases",
  "packageManager": "npm@10.8.2",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "zod-pg": "index.js"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json",
    "test": "npm run build && npm run test:unit && npm run test:integration && npm run test:types",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration --runInBand --setupFilesAfterEnv=./test/integration/setup.ts",
    "test:types": "tsc --noEmit",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "start": "dotenv -- npm run build && node index.js -o ./app/database/schema/generated --exclude '(knex|awsdms)_.*' --json-schema-import-location '../../json' --connection-string 'postgresql://postgres:postgres@localhost:5432/songwhip_api'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msolvaag/zod-pg.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "zod",
    "postgresql"
  ],
  "files": [
    "dist"
  ],
  "author": "msolvaag",
  "license": "ISC",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@testcontainers/postgresql": "^11.2.1",
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22",
    "@types/pg": "^8.15.4",
    "@types/pluralize": "^0.0.33",
    "chalk": "^5.4.1",
    "colorette": "^2.0.20",
    "dotenv-cli": "^8.0.0",
    "jest": "^30.0.4",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "testcontainers": "^11.2.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "zod": "^3.25.75"
  },
  "peerDependencies": {
    "pg": ">=8.12.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "debug": "^4.4.1",
    "pluralize": "^8.0.0"
  }
}
