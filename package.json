{
  "name": "zod-dbs-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "Opinionated Zod schema generator for databases",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm run -r build",
    "start": "pnpm run build && node index.js",
    "dev": "tsx dev.ts",
    "test": "pnpm run build && pnpm run test:unit && pnpm run test:integration && pnpm run test:types",
    "test:unit": "pnpm run --parallel -r test:unit",
    "test:integration": "pnpm run -r test:integration",
    "test:types": "pnpm run -r test:types",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msolvaag/zod-dbs.git"
  },
  "author": "msolvaag",
  "license": "ISC",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@testcontainers/postgresql": "^11.2.1",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.20",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20",
    "@types/pluralize": "^0.0.33",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.6.2",
    "testcontainers": "^11.2.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod": "^4.0.14"
  }
}
