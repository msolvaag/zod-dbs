{
  "name": "zod-pg",
  "version": "0.3.0",
  "description": "Opinionated Zod schema generator for PostgreSQL databases",
  "packageManager": "npm@10.8.2",
  "main": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "zod-pg": "index.js"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json",
    "start": "npm run build && node index.js",
    "test": "npm run build && npm run test:unit && npm run test:integration && npm run test:types",
    "test:unit": "vitest --project unit run",
    "test:integration": "npm run test:integration:generation && npm run test:integration:schema",
    "test:integration:generation": "vitest --project integration:generation run",
    "test:integration:schema": "vitest --project integration:schema run",
    "test:integration:generation:update": "vitest --project integration:generation run -u",
    "test:types": "tsc --noEmit",
    "test:watch": "jest --watch",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msolvaag/zod-pg.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "zod",
    "postgresql"
  ],
  "files": [
    "dist"
  ],
  "author": "msolvaag",
  "license": "ISC",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@testcontainers/postgresql": "^11.2.1",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.20",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22",
    "@types/pg": "^8.15.4",
    "@types/pluralize": "^0.0.33",
    "dotenv-cli": "^8.0.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "testcontainers": "^11.2.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod": "^4.0.5"
  },
  "peerDependencies": {
    "pg": ">=8.12.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "debug": "^4.4.1",
    "mustache": "^4.2.0",
    "ora": "^8.2.0",
    "pluralize": "^8.0.0"
  }
}
